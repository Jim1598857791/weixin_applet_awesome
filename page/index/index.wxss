page {
  width: 100%;
  height: 100%;
  font-family: "微软雅黑";
  background: #f5f5f5;
  padding-bottom: 150rpx;
}

.detailtop {
  height: 360rpx;
  background-color: red;
  text-align: center;
  background: url(http://www.jibuu.cn/ImgServer/wx/bg.jpg) no-repeat top center;
  background-size: cover;
}

.detailtoppic image {
  width: 100rpx;
  height: 100rpx;
  background-color: greenyellow;
  border-radius: 50%;
  border: 3px solid #f38815;
  margin-top: 50rpx;
}

/* 商品列表 */
.indexbom {
  width: 95%;
  margin: 20rpx auto;
  height:800rpx;
}

.indexbom-image {
  width: 100%;
  height: 240rpx;
  margin: 1% 1%;
}

.indexbomli {
  width: 40%;
  height: 240rpx;
  margin: 5% 5%;
  float: left;
}

/* 商品列表标题 */
.indexbom-tit {
  border-left: 3px solid #f38815;
  width: 93%;
  height: 30rpx;
  margin: 20rpx auto;
  font-size: 30rpx;
  color: #424242;
  line-height: 30rpx;
  text-indent: 10px;
}
/* 店铺详情 */
.indextop {
  width: 95%;
  text-align: left;
  font-size: 24rpx;
  color: #fff;
  /* background: url(../imgs/good.png) repeat-x top left; */
  background-size: 20rpx auto;
  margin: 0 auto;
  padding-top: 20rpx;
  margin-top: 60rpx;
}

.indextopSpan {
  display: inline-block;
  text-align: center;
  width: 40rpx;
  height: 40rpx;
  border-radius: 5px;
  background: #3ba2f9;
  font-size: 24rpx;
  color: #fff;
  line-height: 40rpx;
}

.detailtop {
  background-color: yellowgreen;
}

.detailtoptit {
  font-size: 30rpx;
  color: red;
  background-color: blueviolet;
  margin-top: 10rpx;
}

.detailtopstate {
  font-size: 36rpx;
  color: #4a4a4a;
  font-weight: bold;
  margin-top: 10rpx;
}

 
 

/* 会员详情 */

.vip-info {
  width: 95%;
  height: 150rpx;
}

.vip-info-title {
  border-left: 3px solid #f38815;
  width: 93%;
  height: 30rpx;
  margin: 20rpx auto;
  font-size: 30rpx;
  color: #424242;
  line-height: 30rpx;
  text-indent: 10px;
}

.vip-info-detail {
  height: 80%;
  widows: 100%;
  text-align: center;
  margin: 20rpx auto;
  font-size: 40rpx;
  line-height: 30rpx;
  text-indent: 10px;
}

