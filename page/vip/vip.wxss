/* page/vip/vip.wxss */

.header {
  background: #f5f5f5;
  padding: 30rpx;
}

.header .avatar {
  display: block;
  margin: 0 auto;
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  border: 2px solid #fee767;
}

.header .nickname {
  color: #000;
  font-size: 22px;
  line-height: 2.4;
  text-align: center;
}

.section {
  padding: 0;
  color: #2e2e2e;
  font-size: 30rpx;
}

.section .line {
  margin-left: 30rpx;
  padding-right: 30rpx;
  line-height: 3;
  border-bottom: 1px solid #efefef;
}

.section .line:last-child {
  border-bottom: none;
}

.section .line:before {
  content: '>';
  float: right;
  color: #aaa;
  margin-left: 20rpx;
}

.section .line .tl {
  float: right;
  color: #aaa;
}

.userinfo {
  height: 360rpx;
  background: #fff;
  text-align: center;
  background: url(http://www.jibuu.cn/ImgServer/wx/bg.jpg) no-repeat top center;
  background-size: cover;
}

.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border: 3px solid #f38815;
  margin-top: 80rpx;
}

.userinfo-nickname {
  font-size: 30rpx;
  color: blueviolet;
  margin-top: 10rpx;
}
